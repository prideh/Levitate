<%= turbo_frame_tag "recommendations_page_#{local_assigns[:page] || 0}", class: "block w-full" do %>
  <div id="results_grid_<%= local_assigns[:page] || 0 %>" class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-6 w-full">
    <% tracks.each do |track| %>
      <div class="bg-[#0a0a0a] rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 border border-white/5 group h-full flex flex-col">
        <!-- Image with Play Button Overlay (Optional/Future) -->
        <div class="relative aspect-square bg-zinc-900">
          <% if track.image_url.present? %>
             <img src="<%= track.image_url %>" alt="<%= track.name %>" loading="lazy" class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity">
          <% else %>
             <div class="w-full h-full flex items-center justify-center bg-[#0a0a0a] text-zinc-700">No Image</div>
          <% end %>
          
          <!-- Quick Actions Overlay -->
          <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-2 backdrop-blur-sm">
             <a href="https://open.spotify.com/track/<%= track.spotify_id %>" target="_blank"
                 onclick="fetch('<%= click_recommendation_path(track.spotify_id) %>', { headers: { 'Accept': 'text/vnd.turbo-stream.html' } }).then(r => r.text()).then(html => Turbo.renderStreamMessage(html));"
                 class="px-5 py-2.5 bg-white hover:bg-zinc-200 text-black rounded-full font-bold text-sm tracking-wide transition-all transform hover:scale-105 flex items-center gap-2 shadow-lg" 
                 title="Open in Spotify">
                <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/></svg>
                <span>Spotify</span>
             </a>
             
             <% if track.preview_url.present? %>
               <a href="<%= track.preview_url %>" target="_blank" class="p-3 bg-white/10 backdrop-blur-md rounded-full hover:bg-white/20 text-white transform hover:scale-110 transition border border-white/10" title="Preview on Spotify">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
               </a>
             <% end %>
          </div>
        </div>

        <div class="p-4 flex-1 flex flex-col justify-between">
          <div>
            <h3 class="font-bold text-lg text-white mb-1 leading-tight"><%= track.name %></h3>
            <p class="text-zinc-500 text-sm"><%= track.artist %></p>
          </div>
          <div class="mt-3 flex items-center justify-between text-xs text-zinc-600">
             <span><%= track.album %></span>

          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Infinite Scroll / Next Page -->
  <% if local_assigns[:next_page] %>
    <div class="w-full block clear-both mt-8 mb-12 col-span-full">
      <%= turbo_frame_tag "recommendations_page_#{next_page}", 
          src: recommendations_path(vibe: params[:vibe], page: next_page), 
          loading: :lazy, 
          class: "w-full" do %>
          <div class="w-full flex justify-center py-8">
            <div class="animate-pulse text-purple-400">Loading more vibes...</div>
          </div>
      <% end %>
    </div>
  <% end %>
<% end %>
